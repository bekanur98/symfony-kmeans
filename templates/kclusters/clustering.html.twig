{% extends 'base.html.twig' %}

{% block title %}Kclusters index{% endblock %}


{% block body %}

    <h1>Clustering</h1>

    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="nSuccess nNote hideit">
            <p>
                <strong>Warning: </strong>
                {{ msg }}
            </p>
        </div>
    {% endfor %}

    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="nSuccess nNote hideit">
            <p>
                <strong>Success: </strong>
                {{ msg }}
            </p>
        </div>
    {% endfor %}
    <div class="container-sm" style="margin: 30px">
        <form action="{{ path('clustering') }}" method="post">
            <div class="form-group col-sm-4">
                {{ form_row(form.clusterCount) }}
            </div>
            <div class="form-group col-sm-4">
                {{ form_row(form.repeatTime) }}
            </div>
            <div class="form-group col-sm-4">
                <div class="form-check">
                    {{ form_row(form.dimensions) }}
                </div>
            </div>
            {{ form_row(form.cluster) }}
        </form>
    </div>


{% endblock %}
